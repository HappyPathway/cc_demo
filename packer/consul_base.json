{
    "variables": {
        "gcp_account_file": "{{ env `GCP_ACCOUNT_FILE_JSON`}}",
        "gcp_project_id": "{{ env `GCP_PROJECT_ID` }}",
        "gcp_zone": "{{ env `GCP_ZONE` }}",
	"aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
	"aws_secret_key": "{{ env `AWS_SECRET_KEY` }}",
	"aws_region": "{{ env `AWS_REGION` }}",
        "dc_name": "{{ env `DC_NAME` }}",
        "tag_name": "consul-server",
        "type": "{{ env `NODE_TYPE` }}",
	"consul_version": "1.2.2"
    },
    "builders": [
      {
        "image_name": "{{ user `dc_name` }}-gcp-ubuntu-consul-client",
        "type": "googlecompute",
        "account_file": "{{ user `gcp_account_file` }}",
        "project_id": "{{ user `gcp_project_id` }}",
        "source_image": "{{ user `dc_name` }}-gcp-ubuntu-consul-base",
        "ssh_username": "ubuntu",
        "machine_type": "n1-standard-1",
        "zone" : "{{ user `gcp_zone` }}",
        "tags": ["{{ user `tag_name` }}"]
      },
      {
	"type": "amazon-ebs",
	"access_key": "{{user `aws_access_key`}}",
	"secret_key": "{{user `aws_secret_key`}}",
	"region": "{{user `aws_region`}}",
	"source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "ubuntu/images/hvm-ssd/ubuntu-xenial-16.04-amd64-server*",
                "root-device-type": "ebs"
            },
            "owners": ["099720109477"],
            "most_recent": true
        },
	"instance_type": "t2.micro",
	"ssh_username": "ubuntu",
	"ami_name": "{{ user `dc_name` }}-aws-ubuntu-consul-base-{{timestamp}}",
	"tags": {
            "Name": "CC Demo Ubuntu Consul Base",
            "owner": "thomas@hashicorp.com",
            "project": "CC Demo SE East Quarterly Training",
            "Base_AMI_Name": "{{ .SourceAMIName }}",
            "Base_AMI": "{{ .SourceAMI }}",
            "consul_version": "{{ user `consul_version` }}"
        }
      }
    ],
    "provisioners": [
	{
	    "type": "file",
	    "source": "files/install_base.sh",
	    "destination": "/tmp/install_base.sh"
	},
	{
	    "type": "file",
	    "source": "files/install_consul.sh",
	    "destination": "/tmp/install_consul.sh"
	},
	{
	    "type": "shell",
	    "inline": [
		"curl -o /tmp/consul.zip https://releases.hashicorp.com/consul/{{ user `consul_version` }}/consul_{{ user `consul_version` }}_linux_amd64.zip"
	    ]
	},
	{
	    "type": "shell",
	    "inline": [
		"sudo chmod a+x /tmp/install_base.sh",
		"sudo /tmp/install_base.sh",
		"sudo rm -f /tmp/install_base.sh",
		"sudo chmod a+x /tmp/install_consul.sh",
		"sudo /tmp/install_consul.sh",
		"sudo rm -f /tmp/install_consul.sh"
	    ]
	}
    ]
}
